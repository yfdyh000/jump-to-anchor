{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.6",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "strict_min_version": "55.0a1"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content_scripts.js"]
  }],

  "permissions": [
    "menus"
  ],

  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png"
  }

}
